# ==================================
# CONFIGURATION OBLIGATOIRE
# ==================================

# Votre clé API OpenAI (obligatoire)
# Obtenir une clé sur : https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-votre-cle-api-ici

# Chemin vers votre vault Obsidian (obligatoire)
# Exemple Windows : C:\Users\VotreNom\Documents\MonVault
# Exemple Mac/Linux : /Users/votrenom/Documents/MonVault
OBSIDIAN_VAULT_PATH=/chemin/vers/votre/vault

# ==================================
# CONFIGURATION OPTIONNELLE
# ==================================

# Modèle de langage (GPT)
# Options : gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
LLM_MODEL=gpt-4-turbo-preview

# Modèle d'embeddings
# Options : text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBEDDING_MODEL=text-embedding-3-small

# Température du modèle (0.0 = déterministe, 1.0 = créatif)
LLM_TEMPERATURE=0.7

# Nombre maximum de tokens dans la réponse
MAX_TOKENS=2000

# ==================================
# CONFIGURATION DE LA BASE VECTORIELLE
# ==================================

# Chemin de stockage de l'index FAISS
VECTOR_STORE_PATH=./data/vector_store

# Taille des chunks de texte (en caractères)
CHUNK_SIZE=1000

# Chevauchement entre les chunks
CHUNK_OVERLAP=200

# ==================================
# CONFIGURATION DE LA RECHERCHE
# ==================================

# Nombre de résultats à récupérer
TOP_K_RESULTS=5

# Seuil de similarité (0.0 = tout accepter, 1.0 = très strict)
SIMILARITY_THRESHOLD=0.7

# ==================================
# CACHE
# ==================================

# Activer le cache (true/false)
ENABLE_CACHE=true

# Dossier du cache
CACHE_DIR=./data/cache
